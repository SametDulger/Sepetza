{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=sepetza_production.db"
  },
  "JwtSettings": {
    "SecretKey": "",
    "Issuer": "Sepetza",
    "Audience": "SepetzaUsers",
    "ExpirationInMinutes": 1440
  },
  "AllowedOrigins": [
    "https://sepetza.com",
    "https://www.sepetza.com"
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Sepetza": "Information"
    }
  },
  "AllowedHosts": "*",
  "RateLimiting": {
    "AuthPolicy": {
      "PermitLimit": 5,
      "WindowMinutes": 15,
      "QueueLimit": 2
    },
    "GeneralPolicy": {
      "PermitLimit": 100,
      "WindowMinutes": 1,
      "QueueLimit": 10
    },
    "CartPolicy": {
      "PermitLimit": 20,
      "WindowMinutes": 1,
      "QueueLimit": 5
    }
  }
} 